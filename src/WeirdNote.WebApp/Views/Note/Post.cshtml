@model WeirdNote.WebApp.Models.Note
@{
    ViewData["Title"] = "작성하기";
}
<h2>@ViewData["Title"]</h2>

<form method="post" asp-controller="Note" asp-action="SubmitPost" role="form">
  <div class="form-group">
    <label>내용</label>
    <textarea class="form-control" asp-for="Content" rows="6"></textarea>
  </div>

  <div class="form-buttons">
    <button type="submit" class="btn btn-primary btn-lg center-block">저장하기</button>
  </div>
</form>
